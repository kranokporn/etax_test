<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_pabi">
        <div t-attf-class="header" t-attf-style="font-family: {{o.company_id.font}};">
            <div class="row">
                <div class="col-7" style="margin-top:22px;">
                    <b>สำนักงานพัฒนาวิทยาศาสตร์และเทคโนโลยีแห่งชาติ</b><br/>
                    <b>National Science and Technology Development Agency</b>
                </div>
                <div class="col-5 text-right">
                    <img t-if="o.company_id.logo_web" t-att-src="image_data_uri(o.company_id.logo_web)" style="max-height: 60px;" alt="Logo"/>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>
</odoo>
